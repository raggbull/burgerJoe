<div class ="container">  
  <div class="row col-md-12">
  </div>
  <div class ="row">
    <div class="col-md-4">
      <h3>Burgers Ready to Eat</h3>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
          <li class="mb-3">
          {{burger_name}}
            <button type="button" class="change-eaten btn btn-success btn-sm float-right" data-id="{{id}}" data-neweaten="{{devoured}}" data-toggle="modal" data-target="#nomnom">Devour it!
            </button>
          </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class ="col-md-4">
    </div>
    <div class="col-md-4">
      <h3>Burgers Consumed</h3>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
          <li>
          {{burger_name}}
          </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
